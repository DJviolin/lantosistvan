/////////////////////////////////////////////////////////////
// Partials - Header
/////////////////////////////////////////////////////////////

.lang-selector
  position: absolute
  top: 0
  right: 0
  z-index: 9999
  margin: 10px 10px 0 0
  font-family: $TrebuchetMS
  font-size: 9px
  letter-spacing: 1px
  color: #494949
  color: rgba(0,0,0,0.71)

header
  displayFlex()
  flex: 0 0 auto
  justify-content: center
.header-site
  flex-direction: row
  align-items: flex-end
  .content
    displayFlex()
    flex: 0 0 50vw
    flex-direction: column
    align-items: center
    //justify-content: space-between
    .logo
      margin: 40px 30px 40px 30px
      max-width: 300px
      height: 97px
      a
        img
          width: 100%
          height: 100%
.header-blog
  flex-direction: column
  align-items: center
  time
    /*margin-top: 15px*/

@media screen and (-webkit-min-device-pixel-ratio: 0)
  .header-site
    .content
      .logo
        height: auto

@media (min-width: $mobile)
  .logo-header
    display: block // Logo TOP OF nav
  .logo-nav
    display: none // Logo INSIDE nav

@media (max-width: $mobile)
  .header-site
