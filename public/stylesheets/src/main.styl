  font-size: 1.75em; /* 28px */
  letter-spacing: 0.2em; /* 4px */
  text-transform: uppercase;
  font-weight: bold;
  font-style: italic;
  color: #444;
  clear: both;
  text-align: center;
  margin-bottom: 40px;
}
.big-text-light {
  font-family: 'LatoLatin-Light', Georgia, 'Times New Roman', Times, serif;
  font-size: 1.25em; /* 20px */
  letter-spacing: 0.2em; /* 4px */
  text-transform: uppercase;
  color: #444;
  clear: both;
  text-align: center;
  margin-bottom: 40px;
}
.widget-title::after {
  content: '';
  display: block;
  width: 44px;
  height: 1px;
  background: #e9e9e9;
  margin: 18px auto 0 auto;
}

/* ==========================================================================
   Pages - Blog
   ========================================================================== */

.blog article img { width: 100%; }

.blog article { max-width: 600px; }
.blog article .images {
  display: -webkit-flex; display: flex;
  -webkit-flex-direction: column; flex-direction: column;
}
.blog article .images li { margin-bottom: 3px; }

.blog article .tags .text { float: left; padding-right: 5px; }
.blog article .tags li { float: left; }
.blog article .tags li + li::before { content: ', '; }

.blog article header time { margin-top: 15px; }

.blog .pagination {
  clear: both;
  padding: 25px 0 120px 0;
  text-align: center;
  text-transform: lowercase;
  font-size: 0.95em;
  letter-spacing: 0.07em;
  font-family: 'Monotype-Corsiva', 'Serlio-LH-regular', 'Helvetica Neue', Arial, Helvetica, sans-serif;
  color: #777;
}
.blog .pagination a:hover { color: #ccc; }

/* ==========================================================================
   Pages - Contact
   ========================================================================== */

.contact { -webkit-align-items: center; align-items: center; }
.contact article { max-width: 600px; }

