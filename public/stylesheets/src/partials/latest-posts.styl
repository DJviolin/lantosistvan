.latest-posts-title {
  margin: 45px 0 0 0;
}
.latest-posts-title .widget-title {
  margin-bottom: 40px;
  //font-family: 'Montserrat-Regular', Georgia, 'Times New Roman', Times, serif;
  //font-size: 13px;
}
.latest-posts-title .widget-title::after {
  display: none;
}



.latest-posts 
  displayFlex()
  flex-direction: row
  align-items: center
  justify-content: center
  flex-wrap: wrap
  margin: 0 0 30px 0
  text-align: center
  //max-width: 1150px
  max-width: 980px
  a
    width: 33.3%
  article
    position: relative
    margin: 2px
    .preview-image
      width: 100%;
      height: auto
      //height: 259px
      object-fit: cover
      overflow: hidden
    .post-preview-hidden
      position: absolute
      opacity: 0
      top: 0
      left: 0
      right: 0
      bottom: 0
      //background-color: #fff
      background-color: rgba(80,76,73,.9)
      //background-color: rgba(70,70,70,.9)
      transition: opacity 0.3s ease 0s
      &:hover
        opacity: 1
      .post-preview-header
        displayFlex()
        flex-direction: column
        align-items: center
        justify-content: center
        height: 100%
    .post-preview-header
      .category,
      .category:hover
        color: #fff
        margin: 0 5px 0 5px
        //font-family: 'Garamond-Regular', 'LatoLatin-Regular', 'im-fell-french-canon-pro-italic', $Georgia
        font-family: 'Raleway-Light', sans-serif
        text-transform: uppercase
        font-size: 15.5px
        letter-spacing: 1.5px
        line-height: 15px
        margin-bottom: 30px
      h1,
      h1:hover
        //font-size: 0.9em; // 14px
        line-height: 1.4em
        font-family: 'TrajanPro-Regular', $Georgia
        text-transform: uppercase
        //color: #000
        color: #fff
        margin: 0 5px 1px 5px
        font-size: 20px
        letter-spacing: 0.9px
        font-style: italic
      .more,
      .more:hover
        font-family: 'Caslon-Pro-Italic', 'Crimson-Text-Italic', $Georgia
        font-size: 19px
        letter-spacing: 0.9px
        text-transform: lowercase
        color: #fff
        margin-top: 40px
      .more::after
        content: '\A\2192'
        //content: '\A\21FE'
        //content: '\A\21A3'
        margin: 0 0 10px 0
        white-space: pre
        word-wrap: break-word
        font-size: 25px
.drawing
  margin: 0 0 10px 0

@media (max-width: $mobile)
  .latest-posts a { width: 100%; }
  .latest-posts article { margin-left: 0; margin-right: 0; }
  .latest-posts article .preview-image { max-width: 100%; }
  .latest-posts article .post-preview-hidden {
    position: relative;
    opacity: 1;
    background: none;
    transition: opacity 0s ease 0s;
  }
  .latest-posts article .post-preview-header .category,
  .latest-posts article .post-preview-header .category:hover { margin-top: 20px; color: #928371; }
  .latest-posts article .post-preview-header h1,
  .latest-posts article .post-preview-header h1:hover { margin-bottom: 90px; color: #928371; }
  .latest-posts a:last-child > article .post-preview-header h1,
  .latest-posts a:last-child > article .post-preview-header h1:hover { margin-bottom: 0; }
  .latest-posts article .post-preview-header .more,
  .latest-posts article .post-preview-header .more:hover { display: none; }
