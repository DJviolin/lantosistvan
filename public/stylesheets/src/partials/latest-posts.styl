.latest-posts-title {
  margin: 45px 0 0 0;
}
.latest-posts-title .widget-title {
  margin-bottom: 40px;
  //font-family: 'Montserrat-Regular', Georgia, 'Times New Roman', Times, serif;
  //font-size: 13px;
}
.latest-posts-title .widget-title::after {
  display: none;
}
.latest-posts {
  display: -webkit-flex; display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  margin: 0 0 30px 0;
  text-align: center;
  //max-width: 1150px;
  max-width: 980px;
}
// Crop images: http://codepen.io/KristinB/pen/tdKvL
.latest-posts a {
  width: 33.3%;
}
.latest-posts article {
  //margin: 1px;
  margin: 2px;
  //margin: 5px;
  position: relative;
}
.latest-posts article .post-preview-hidden {
  position: absolute;
  opacity: 0;
  //top: 15px; left: 15px; right: 15px; bottom: 15px;
  top: 0; left: 0; right: 0; bottom: 0;
  //background-color: #fff;
  //background-color: #000;
  background-color: rgba(80,76,73,.9);
  //background-color: rgba(70,70,70,.9);
  transition: opacity 0.3s ease 0s;
}
.latest-posts article .post-preview-header .category,
.latest-posts article .post-preview-header .category:hover {
  //font-size: 0.85em; /* 13px */
  //font-family: 'LatoLatin-Regular', 'im-fell-french-canon-pro-italic', Georgia, 'Times New Roman', Times, serif;
  //color: #9e9e9e;
  color: #fff;
  margin: 0 5px 0 5px;
  /**/
  //font-family: 'Garamond-Regular', 'LatoLatin-Regular', 'im-fell-french-canon-pro-italic', Georgia, 'Times New Roman', Times, serif;
  font-family: 'Raleway-Light', sans-serif;
  text-transform: uppercase;
  font-size: 15.5px;
  letter-spacing: 1.5px;
  line-height: 15px;
  margin-bottom: 30px;
}
.latest-posts article .post-preview-header h1,
.latest-posts article .post-preview-header h1:hover {
  //font-size: 0.9em; /* 14px */
  line-height: 1.4em;
  font-family: 'TrajanPro-Regular', Georgia, 'Times New Roman', Times, serif;
  text-transform: uppercase;
  //color: #000;
  color: #fff;
  margin: 0 5px 1px 5px;
  /**/
  font-size: 20px;
  letter-spacing: 0.9px;
  font-style: italic;
}
.latest-posts article .post-preview-header .more,
.latest-posts article .post-preview-header .more:hover {
  font-family: 'Caslon-Pro-Italic', 'Crimson-Text-Italic', Georgia, 'Times New Roman', Times, serif;
  font-size: 19px;
  letter-spacing: 0.9px;
  text-transform: lowercase;
  color: #fff;
  margin-top: 40px;
}
.latest-posts article .post-preview-header .more::after {
  content: '\A\2192';
  //content: '\A\21FE';
  //content: '\A\21A3';
  margin: 0 0 10px 0;
  white-space: pre;
  word-wrap: break-word;
  font-size: 25px;
}
//.latest-posts article:hover > .post-preview-hidden {
.latest-posts article .post-preview-hidden:hover {
  opacity: 1;
}
.latest-posts article .post-preview-hidden .post-preview-header {
  height: 100%;
  display: -webkit-flex; display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.drawing { margin: 0 0 10px 0; }
.latest-posts article .preview-image {
  width: 100%;
  //width: 365px;
  //max-width: 364px;
  height: auto;
  //height: 259px;
  object-fit: cover;
  overflow: hidden;
}
