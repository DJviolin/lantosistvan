@media (min-width: 1600px) {
  .toggle-mobile-nav, .main-nav.active { display: none; }
  .logo-header {
    /*display: none; /* Logo INSIDE nav */
    display: block; /* Logo TOP OF nav */
  }
  .logo-nav { display: none; } /* Logo INSIDE nav */
  .navigation { margin-bottom: 60px; } /* Logo TOP OF nav */
}

@media (max-width: 1600px) {
  .left-nav, .lang-en-EN .left-nav { margin-left: 0; }
  .main-nav, .logo-nav { display: none; }
  .main-nav.active { display: block; }

  .logo {
    margin: 30px 30px 30px 30px;
    /*max-width: 350px;*/
    /*max-width: 170px;*/
    /*max-width: 130px;*/
  }

  /* Mobile nav */
  .toggle-mobile-nav { margin-bottom: 10px; }
  .toggle-mobile-nav .menu-button {
    font-family: 'TrajanPro-Bold', Georgia, serif;
    color: #000;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 1em;
  }
  .toggle-mobile-nav .menu-button:hover { cursor: pointer; }
  .toggle-mobile-nav .menu-button span { font-size: 2em; vertical-align: -0.15em; }

  .navigation {
    -webkit-flex-direction: column; flex-direction: column;
    font-family: Georgia, 'Times New Roman', Times, serif;
    /*font-size: 0.75em;*/
    font-size: 0.78em;
    letter-spacing: 0.15em;
    color: #000;
  }
  .left-nav { margin-top: 10px; margin-bottom: 0; }
  .right-nav { margin-bottom: 30px; }
  .main-nav ul { -webkit-flex-direction: column; flex-direction: column; }
  .main-nav ul li { margin: 0; }
  .main-nav ul li a {
    padding-top: 18px;
    padding-bottom: 18px;
  }
  .main-nav ul .parent > a { margin-right: 0; }
  .main-nav ul .parent > a::after {
    -ms-transform: rotate(90deg) translateX(-1px) translateY(15px);
    -o-transform: rotate(90deg) translateX(-1px) translateY(15px);
    -moz-transform: rotate(90deg) translateX(-1px) translateY(15px);
    -webkit-transform: rotate(90deg) translateX(-1px) translateY(15px);
    transform: rotate(90deg) translateX(-1px) translateY(15px);
  }
  .main-nav ul ul {
    -webkit-flex-direction: column; flex-direction: column;
    visibility: visible;
    opacity: 1;
    position: relative;
    margin-left: 0;
    padding: 0;
    -webkit-box-shadow: none; -moz-box-shadow: none; box-shadow: none;
    -o-transition: all 0s ease 0s; -moz-transition: all 0s ease 0s; -webkit-transition: all 0s ease 0s; transition: all 0s ease 0s;
    background-color: #fff;
  }
  .main-nav ul ul li a {
    text-align: center;
    font-size: 0.9em;
    color: #777;
    margin-top: 8px;
    margin-bottom: 8px;
  }


  /*.logo { margin-top: 30px; }*/

  /*header.main {
    position: fixed; width: 100%; top: 0; background-color: #fff;
    -o-transition: top 0.2s ease-in-out 0s; -moz-transition: top 0.2s ease-in-out 0s; -webkit-transition: top 0.2s ease-in-out 0s; transition: top 0.2s ease-in-out 0s;
  }*/
  header.main {
    width: 100%;
  }
  header.main .content {
    -webkit-flex: 0 0 100%; flex: 0 0 100%;
    -webkit-box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.1);
    -moz-box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.1);
    box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.1);
  }
  .sidescroll .images li, .sidescroll .images li:last-child { margin: 0 5vw 3px 5vw; background: none; }
  .blog article { margin: 0 5vw 0 5vw; }
  .sidescroll .images {
    display: -webkit-flex; display: flex;
    -webkit-flex-direction: column; flex-direction: column;
    -webkit-justify-content: center; justify-content: center;
    position: relative;
  }
  .sidescroll .images img { height: auto; width: 100%; }

  .frontpage .content { -webkit-flex: 0 0 100%; flex: 0 0 100%; padding: 0 5vw 0 5vw; }
  .latest-posts a { width: 100%; }
  .latest-posts article { margin-left: 0; margin-right: 0; }
  .latest-posts article .preview-image { max-width: 100%; }
  .latest-posts article .post-preview-hidden {
    position: relative;
    opacity: 1;
    background: none;
    -o-transition: opacity 0s ease 0s; -moz-transition: opacity 0s ease 0s; -webkit-transition: opacity 0s ease 0s; transition: opacity 0s ease 0s;
  }
  .latest-posts article .post-preview-header .category,
  .latest-posts article .post-preview-header .category:hover { margin-top: 20px; color: #928371; }
  .latest-posts article .post-preview-header h1,
  .latest-posts article .post-preview-header h1:hover { margin-bottom: 90px; color: #928371; }
  .latest-posts a:last-child > article .post-preview-header h1,
  .latest-posts a:last-child > article .post-preview-header h1:hover { margin-bottom: 0; }
  .latest-posts article .post-preview-header .more,
  .latest-posts article .post-preview-header .more:hover { display: none; }

  footer .content { -webkit-flex: 0 0 85vw; flex: 0 0 85vw; }
  footer .row { -webkit-flex-direction: column; flex-direction: column; padding-top: 0; }
  footer aside { padding: 40px 0 40px 0; }
  footer aside:nth-child(2) { border-left: none; border-right: none; border-top: 1px dotted #e9e9e9; border-bottom: 1px dotted #e9e9e9; }
}
