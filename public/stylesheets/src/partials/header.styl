.logo
  //margin: 55px 30px 85px 30px
  margin: 40px 30px 40px 30px
  max-width: 300px
  height: 97px
  a
    img
      width: 100%
      height: 100%

.lang-selector
  position: absolute
  top: 0
  right: 0
  z-index: 9999
  margin: 10px 10px 0 0
  font-family: $TrebuchetMS
  //text-transform: uppercase
  font-size: 9px
  letter-spacing: 1px
  color: #494949
  color: rgba(0,0,0,0.71)

@media screen and (-webkit-min-device-pixel-ratio: 0)
  .logo
    height: auto

@media (min-width: $mobile)
  .logo-header
    display: block // Logo TOP OF nav
  .logo-nav
    display: none // Logo INSIDE nav

@media (max-width: $mobile)
  header.main
    width: 100%
    box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.1)
  .logo
    margin: 30px
  .logo-nav
    display: none
