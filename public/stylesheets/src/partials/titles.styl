.widget-title-img
  display: block
  margin: 0 auto 20px auto

.widget-title
  //font-size: 13px
  font-size: 0.9em
  letter-spacing: 0.3em
  text-transform: uppercase
  margin-bottom: 20px
  font-family: 'LatoLatin-Regular', $Georgia
  clear: both
  text-align: center

.big-text
  font-family: 'Crimson-Text-Roman', $Georgia
  font-size: 1.75em // 28px
  letter-spacing: 0.2em // 4px
  text-transform: uppercase
  font-weight: bold
  font-style: italic
  color: #444
  clear: both
  text-align: center
  margin-bottom: 40px

.big-text-light
  font-family: 'LatoLatin-Light', $Georgia
  font-size: 1.25em // 20px
  letter-spacing: 0.2em // 4px
  text-transform: uppercase
  color: #444
  clear: both
  text-align: center
  margin-bottom: 40px

.widget-title::after
  content: ''
  display: block
  width: 44px
  height: 1px
  background: #e9e9e9
  margin: 18px auto 0 auto
