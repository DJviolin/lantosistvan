footer
  displayFlex()
  flex-direction: row
  align-items: flex-start
  justify-content: center
  .content
    displayFlex()
    flex: 0 0 58vw
    flex-direction: column
    align-items: center
    justify-content: center
    //width: 50vw
    max-width: 1100px
    //height: auto
  .row
    displayFlex()
    flex-direction: row
    align-items: center
    justify-content: space-between
    width: 100%
    height: auto
    margin: 40px 0 0 0
    padding: 40px 0 40px 0
    border-top: 1px solid #e9e9e9
    //border-bottom: 1px solid #e9e9e9
  aside
    width: 100%
    text-align: center
    padding: 35px 0 35px 0
    &:nth-child(2)
      border-left: 1px dotted #e9e9e9
      border-right: 1px dotted #e9e9e9
    a
      font-family: 'im-fell-french-canon-pro-italic', $Georgia
      //font-size: 13px
      font-size: 0.93em
    p
      margin-bottom: 0
      text-transform: lowercase
  .social-links
    a
      margin-right: 20px
      font-size: 0.8em
      //color: #6b6b6b
      color: #727272
      &:last-child
        margin-right: 0

/* Social Icons styling */
[class^='icon-']:before,
[class*=' icon-']:before
  font-family: 'fontello'
  font-style: normal
  font-weight: normal
  speak: none
  display: inline-block
  text-decoration: inherit
  width: 1em
  margin-right: .2em
  text-align: center
  //opacity: .8
  font-variant: normal
  text-transform: none
  line-height: 1em
  margin-left: .2em
  //font-size: 120%
  //text-shadow: 1px 1px 1px rgba(127, 127, 127, 0.3)
  font-size: 90%
.icon-facebook:before
  content: '\e81f'
.icon-instagram:before
  content: '\e821'
.icon-pinterest:before
  content: '\e802'
.icon-vimeo:before
  content: '\e809'

// http://www.alt-codes.net/miscellaneous-symbols
// http://www.fileformat.info/info/unicode/char/1f682/index.htm
.site-copyright
  padding: 45px 0 45px 0
  margin-bottom: 0
  border-top: 1px solid #e9e9e9
  width: 100%
  text-align: center
  //color: #606060
  //font-size: 0.69em // 11px
  font-family: $TrebuchetMS
  line-height: 1.75em
  font-family: 'LatoLatin-Regular', $TrebuchetMS
  text-transform: uppercase
  font-size: 8px
  letter-spacing: 1px
  color: #494949
  color: rgba(0,0,0,0.71)
  //a:hover
  //  color: #529aa5

@media (max-width: $mobile)
  footer
    .content
      flex: 0 0 85vw
    .row
      flex-direction: column
      padding-top: 0
    aside
      padding: 40px 0 40px 0
      &:nth-child(2)
        border-left: none
        border-right: none
        border-top: 1px dotted #e9e9e9
        border-bottom: 1px dotted #e9e9e9
