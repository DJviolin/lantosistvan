.blog
  article
    max-width: $widthBlog
    img
      width: 100%
    .images
      displayFlex()
      flex-direction: column
      li
        margin-bottom: 3px
    .tags
      .text
        float: left
        padding-right: 5px
      li
        float: left
      li + li::before
        content: ', '

  .pagination
    clear: both
    padding: 25px 0 120px 0
    text-align: center
    text-transform: lowercase
    font-size: 0.95em
    letter-spacing: 0.07em
    font-family: 'Monotype-Corsiva', 'Serlio-LH-regular', $Helvetica
    color: #777
    a:hover
      color: #ccc

@media (max-width: $mobile)
  .blog
    article
      margin: 0 5vw 0 5vw
