<main class="blog">

  <article class="id-{{data._id}}">

    <header class="article id-{{data._id}}">
      <div class="drawing">
        <img src="{{data.drawing}}" alt="">
      </div>
      <time>{{data.month}} {{data.day}}, {{data.year}}</time>
      <h1><a href="{{language}}/blog/{{data.url}}">{{data.title}}</a></h1>
      <div class="category"><a href="{{language}}/category/{{data.category}}">{{data.category}}</a></div>
    </header><!-- header.article.id-{{data._id}} -->

    <div class="article content">
    
      {{{__ data.body}}}

      <ul class="images">
        {{#each data.images}}
        <li><img src="{{../data.imagesFolder}}{{this}}" alt=""></li>
        {{else}}
        <p class="empty">No images</p>
        {{/each}}
        <!-- access to parent's property with "../" -->
      </ul><!-- ul.images -->

    </div><!-- div.article.content -->

    <footer class="article id-{{data._id}}">
      <div class="tags">
        <span class="text">Tags: </span>
        <ul>
          {{#each data.tags}}
          <li><a href="{{language}}/tag/{{this}}">{{this}}</a></li>
          {{/each}}
        </ul>
      </div>
    </footer><!-- footer.article.id-{{data._id}} -->

  </article><!-- article.id-{{data._id}} -->

</main><!-- main.blog -->