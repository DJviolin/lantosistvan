<div class="main portfolio lazyload">
  <div class="content sidescroll">
    <ul class="images">
      {{#each data.images}}
      <li><img src="{{../data.imagesFolder}}{{this}}" alt="{{../siteName}}"></li>
      {{else}}
      <p class="empty">No content</p>
      {{/each}}
      <!-- access to parent's property with "../" -->
    </ul><!-- ul.images -->
  </div><!-- div.content.sidescroll -->
</div><!-- div.main.portfolio -->