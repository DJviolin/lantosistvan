.slick-slider
  user-select: none
  touch-action: pan-y
  -webkit-touch-callout: none
  -webkit-tap-highlight-color: transparent
  //position: relative

.slick-list,
.slick-track
  overflow: hidden // Helps not loosing focus, turns off horizontal scrollbar

.slick-track
  displayFlex()
  flex-wrap: nowrap
  flex-direction: row
  position: relative // Helps centering

.slick-loading
  .slick-track,
  .slick-slide
    visibility: hidden
  //.slick-list
  //  background: #fff url('../images/ajax-loader.gif') center center no-repeat
.slick-initialized
  .slick-slide
    display: block

.slick-slide
  display: none
  &.slick-loading
    img
      display: none
  &.dragging
    img
      pointer-events: none

// Arrows
.slick-prev,
.slick-next
  display: block
  position: absolute
  padding: 0
  border: none
  font-family: 'fontello'
  font-size: 0
  line-height: 0
  cursor: pointer
  color: #b9b9b9
  //
  background: #fbfafa
  width: 44px
  height: 44px
  border-radius: 100%
  top: 50%
  //
  transform-style: preserve-3d
  perspective: 1000
  transition: opacity 0.3s ease 0s
  //transform: translate(0, -50%)
  z-index: 99
  &:focus
    outline: none
  &:hover
    opacity: .5
    &:before
      opacity: 1
  &:before
    position: absolute
    top: 50%
    left: 50%
    opacity: .75
    font-size: 40px
    line-height: 1em
    transform: translate(-51%, -44%)
    box-sizing: border-box
    color: #b9b9b9

.slick-prev
  left: 25px
  &:before
    content: '\e838'
.slick-next
  right: 25px
  &:before
    content: '\e837'
